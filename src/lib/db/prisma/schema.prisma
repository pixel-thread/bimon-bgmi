generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/**
 * --------------------------
 * ENUMS
 * ---------------------------
 */

enum Role {
  SUPER_ADMIN
  ADMIN
  PLAYER
}

enum PlayerCategory {
  ULTRA_NOOB
  NOOB
  PRO
  ULTRA_PRO
}

enum Status {
  ACTIVE
  INACTIVE
  DELETED
}

/**
 * --------------------------
 * MODELS
 * ---------------------------
 */

model User {
  id                   String   @id @default(uuid())
  email                String?  @unique
  clerkId              String   @unique
  isEmailLinked        Boolean  @default(false)
  userName             String   @unique
  usernameLastChangeAt DateTime @default(now())
  role                 Role     @default(PLAYER)
  balance              Int      @default(0)
  isInternal           Boolean  @default(false)
  isVerified           Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  playerId     String?     @unique
  player       Player?
  tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  tournamentId String?
  wallet       Wallet?
  createdBy    String?
}

model Player {
  id               String             @id @default(uuid())
  isBanned         Boolean            @default(false)
  category         PlayerCategory     @default(NOOB)
  gameScore        GameScore[]
  pollVote         PollVote?
  userId           String             @unique
  user             User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  tournamentWinner TournamentWinner[]
  Wallet           Wallet?
  playerStats      PlayerStats?
  team             Team?              @relation(fields: [teamId], references: [id])
  teamId           String?

  characterImageId String?  @unique
  characterImage   Gallery? @relation(fields: [characterImageId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())
}

model GameScore {
  highScore    Int
  lastPlayedAt DateTime
  playerId     String   @unique
  player       Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
}

enum SeasonStatus {
  ACTIVE
  INACTIVE
}

enum GalleryStatus {
  ACTIVE
  INACTIVE
}

model Gallery {
  id             String        @id @default(uuid())
  imageId        String        @unique
  name           String
  path           String
  fullPath       String
  publicUrl      String
  status         GalleryStatus @default(ACTIVE)
  isCharacterImg Boolean       @default(false)

  playerId String? @unique
  player   Player?

  tournament Tournament[]
}

model Season {
  id          String       @id @default(uuid())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime     @default(now())
  status      SeasonStatus @default(ACTIVE)
  createdBy   String
  createdAt   DateTime     @default(now())

  tournament Tournament[]
  Team       Team[]

  @@unique([id, status]) // only one active season
  @@index([id])
  @@index([name])
}

model Tournament {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime @default(now())
  fee       Int?
  team      Team[]
  user      User[]
  season    Season?  @relation(fields: [seasonId], references: [id])
  seasonId  String?
  createdBy String?
  createdAt DateTime @default(now())

  tournamentWinner TournamentWinner[]
  pollVote         PollVote[]
  match            Match[]

  galleryId String?
  gallery   Gallery? @relation(fields: [galleryId], references: [id], onDelete: Cascade)
}

enum Vote {
  IN
  OUT
  SOLO
}

model PollVote {
  id           String     @id @default(uuid())
  vote         Vote
  inOption     String
  outOption    String
  soloOption   String
  startDate    DateTime
  endDate      DateTime
  playerId     String     @unique
  player       Player     @relation(fields: [playerId], references: [id])
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  createdAt    DateTime   @default(now())
}

model TournamentWinner {
  id           String     @id @default(uuid())
  playerId     String
  player       Player     @relation(fields: [playerId], references: [id])
  position     Int
  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id])
  createdAt    DateTime   @default(now())
}

model Match {
  id           String     @id @default(uuid())
  matchName    String
  Tournament   Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId String

  createdAt DateTime @default(now())
}

model Wallet {
  id        String   @id @default(uuid())
  amount    Int
  createdAt DateTime @default(now())
  playerId  String?  @unique
  player    Player?  @relation(fields: [playerId], references: [id], onDelete: Cascade)
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlayerStats {
  id        String   @id @default(uuid())
  playerId  String   @unique
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  matches   Int
  wins      Int
  deaths    Int
  kills     Int
  kd        Float
  createdAt DateTime @default(now())
}

// Category enum
enum Category {
  NOOB
  PRO
  ULTRA_NOOB
  ULTRA_PRO
}

model Team {
  id           String      @id @default(uuid())
  name         String
  players      Player[]
  createdAt    DateTime    @default(now())
  teamNumber   Int
  tournamentId String?
  tournament   Tournament? @relation(fields: [tournamentId], references: [id])
  seasonId     String?
  season       Season?     @relation(fields: [seasonId], references: [id])
}
